<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardPreventCornerOverlap="false"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/miviaje_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="298dp"
                android:layout_height="84dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/miviaje_left"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/left" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="66dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginRight="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/miviaje_origen"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:text="Carabayllo" />

                            <TextView
                                android:id="@+id/miviaje_hora_origen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="09:00 am" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/miviaje_divider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/viaje_destino"
                                android:layout_width="134dp"
                                android:layout_height="wrap_content"
                                android:text="UPC San Miguel" />

                            <TextView
                                android:id="@+id/viaje_hora_destino"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="11:00 am" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto "
                    android:id="@+id/viaje_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />


                <LinearLayout
                    android:id="@+id/container1"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/viaje_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mitch Tabian"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/viaje_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Title of a Blog"
                        android:textColor="#000"
                        android:textSize="10sp" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>