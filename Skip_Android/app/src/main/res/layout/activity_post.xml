<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Post">

    <ImageButton
        android:id="@+id/postback_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="360dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:background="#00FFFFFF"
        app2:srcCompat="@drawable/ic_arrow_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="546dp"
        app:cardBackgroundColor="@color/colorSecondary"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="240dp"
                android:layout_marginBottom="160dp"
                android:orientation="vertical"
                android:gravity="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/post_btn"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Publicar"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/postbutton"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="412dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/post_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        app2:civ_border_color="#FF000000"
                        app2:civ_border_width="0dp" />

                    <LinearLayout
                        android:id="@+id/postcontainer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/post_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mitch Tabian"
                            android:textColor="#FFFF"
                            android:textSize="15sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/post_text"
                        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:hint="Descripcion del viaje"
                        android:textColor="#FFFF"
                        android:textColorHint="#A0FFFFFF"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/leftimagepost"
                            android:layout_width="56dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/left_w" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginRight="30dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/post_origen"
                                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:hint="Punto Partida"
                                    android:padding="5dp"
                                    android:textColor="#FFFF"
                                    android:textColorHint="#A0FFFFFF"
                                    android:textSize="12sp" />

                                <EditText
                                    android:id="@+id/post_hora_origen"
                                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="09:00 am"
                                    android:padding="8dp"
                                    android:textColor="#FFFF"
                                    android:textColorHint="#A0FFFFFF"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imageViewpost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/divider_w" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="30dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/post_destino"
                                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                                    android:layout_width="134dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Punto Destino"
                                    android:padding="8dp"
                                    android:textColor="#FFFF"
                                    android:textColorHint="#A0FFFFFF"
                                    android:textSize="12sp" />

                                <EditText
                                    android:id="@+id/post_hora_destino"
                                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="11:00 am"
                                    android:padding="1dp"
                                    android:textColor="#FFFF"
                                    android:textColorHint="#A0FFFFFF"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>